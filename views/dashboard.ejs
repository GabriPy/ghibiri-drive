<!DOCTYPE html>
<html lang="it">

<head>
  <meta charset="UTF-8" />
  <title>GhibiriDrive - Dashboard</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <nav class="navbar navbar-light">
    <div class="container-main d-flex justify-content-between align-items-center py-3">
      <span class="navbar-brand mb-0 h1" style="color:#1a73e8;">GhibiriDrive</span>
      <a href="/logout" class="btn btn-outline-danger">Esci</a>
    </div>
  </nav>

  <div class="container-main">
    <h4>Carica un file</h4>
    <form action="/upload" method="POST" enctype="multipart/form-data" class="mb-4 d-flex gap-2">
      <input type="file" name="file" required class="form-control" />
      <button type="submit" class="btn btn-upload">Upload</button>
    </form>

    <h4>I tuoi file</h4>
    <% if (files.length===0) { %>
    <p class="text-muted">Nessun file caricato ancora.</p>
    <% } else { %>
    <div class="row g-3">
      <% files.forEach(function(file) { 
           const originalName = file.replace(/^\d+-/, '');
           let icon = 'ðŸ“„';
           const ext = originalName.split('.').pop().toLowerCase();
           if (['png', 'jpg', 'jpeg', 'gif', 'bmp', 'svg'].includes(ext)) icon = 'ðŸ–¼ï¸';
           else if (['zip', 'rar', '7z', 'tar', 'gz'].includes(ext)) icon = 'ðŸ—œï¸';
           else if (['mp4', 'avi', 'mov', 'mkv'].includes(ext)) icon = 'ðŸŽ¥';
           else if (['mp3', 'wav', 'flac'].includes(ext)) icon = 'ðŸŽµ';
      %>
      <div class="col-sm-6 col-md-4 col-lg-4">
        <div class="file-card">
          <div class="file-icon">
            <%= icon %>
          </div>
          <div class="file-info">
            <div class="file-name" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= originalName %>">
              <%= originalName %>
            </div>
            <div class="container">
              <div class="row mt-2">
                <form method="POST" action="/delete" onsubmit="return confirmDelete()">
                  <a href="/download/<%= encodeURIComponent(file) %>" class="btn btn-download btn-sm mb-1">Scarica</a>
                  <input type="hidden" name="filename" value="<%= file %>">
                  <button type="submit" class="btn btn-danger btn-sm">Elimina</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <% } %>
  </div>

  <script>
    const tooltipTriggerList = [...document.querySelectorAll('[data-bs-toggle="tooltip"]')]
    const tooltipList = tooltipTriggerList.map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))

    function confirmDelete() {
      return confirm('Sei sicuro di voler eliminare sto file, nenno?');
    }
  </script>
</body>

<style>
  body {
    background: #f5f5f7;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  }

  .navbar {
    background: white;
    box-shadow: 0 1px 3px rgb(60 64 67 / 0.3);
  }

  .file-card {
    background: white;
    border-radius: 8px;
    padding: 15px;
    box-shadow: 0 1px 3px rgb(60 64 67 / 0.2);
    display: flex;
    gap: 15px;
    cursor: default;
    user-select: none;
    transition: box-shadow 0.15s ease-in-out;
    align-items: flex-start;
  }

  .file-icon {
    font-size: 28px;
    flex-shrink: 0;
  }

  .file-info {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .file-name {
    font-weight: 500;
    color: #202124;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .btn-group-vertical {
    display: flex;
    flex-direction: column;
  }

  .btn-upload {
    background-color: #1a73e8;
    color: white;
    border: none;
  }

  .btn-upload:hover {
    background-color: #155ab6;
  }

  .btn-download {
    background-color: #e8f0fe;
    color: #1967d2;
    font-weight: 600;
    border: none;
    padding: 5px 12px;
    border-radius: 4px;
  }

  .btn-download:hover {
    background-color: #d2e3fc;
    color: #174ea6;
  }

  .container-main {
    max-width: 960px;
    margin: 40px auto;
  }
</style>

</html>